{
  "compilerOptions": {
    "noEmit": true, // Optional - see note below
    "target": "esnext",
    "module": "nodenext",
    "rewriteRelativeImportExtensions": true,
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "resolveJsonModule": true
  },  
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
  ],
}
